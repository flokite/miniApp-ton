generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Pessoa {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
}

model User {
  id         Int      @id @default(autoincrement())
  telegramId Int      @unique
  username   String?  
  first_name String
  last_name  String?  
}